@model Advanced_Database_and_ORM_Concepts_Assignment_1.Models.PlaylistDetails

<h1>@Model.Playlist.Name</h1>

<p>Number of songs: @Model.NumSongs</p>

<p>Total runtime: @TimeSpan.FromSeconds(Model.TotalRuntimeSeconds).ToString("hh\\:mm\\:ss")</p>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Album</th>
            <th>Runtime</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SongDetails s in Model.SongDetails)
        {
          <tr>
              <td>@s.Song.Title</td>
              <td>@s.Song.Album.Title</td>
              <td>@TimeSpan.FromSeconds(s.RuntimeSeconds).ToString("hh\\:mm\\:ss")</td>
              <td>
                  <form asp-action="RemoveSong" asp-route-playlistId="@Model.Playlist.Id" asp-route-songId="@s.Song.Id" method="post">
                      <button type="submit">Remove</button>
                  </form>
              </td>
          </tr>
        }
    </tbody>
</tbody>

<a asp-action="AllSongs">All Songs</a>
